{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "ES5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
        "@app/*": ["*"]
    },
    "experimentalDecorators": true,
    "lib": [
        "dom",
        "es2015",
        "es2015.promise"
    ]
  },
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "stories"
  ],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  }
}